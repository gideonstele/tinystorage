{
  "name": "tinystore",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "description": "Fractal React Library, utilities and components",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsx ./scripts/build.ts",
    "typecheck": "tsc --noEmit --incremental --project tsconfig.json",
    "lint": "pnpm exec eslint --cache --ext .ts ./src",
    "lint:fix": "pnpm exec eslint --cache --ext .ts ./src --fix",
    "clean": "pnpm clean:module && pnpm clean:dist",
    "clean:module": "pnpm -r exec -- rm -rf node_modules",
    "clean:dist": "pnpm -r exec -- rm -rf dist",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shijinyu/tinystore.git"
  },
  "bugs": {
    "url": "https://github.com/shijinyu/tinystore/issues"
  },
  "homepage": "https://github.com/shijinyu/tinystore#readme",
  "keywords": [
    "sessionStorage",
    "localStorage",
    "cookie"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^17.3.0",
    "@jest/types": "^28.1.3",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/babel-code-frame": "^6.20.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.5",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/svgo": "^2.6.1",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "browserslist": "^4.21.2",
    "commitlint": "^17.3.0",
    "esbuild": "^0.14.49",
    "esbuild-plugin-browserslist": "^0.4.12",
    "eslint": "^7",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.4",
    "ora": "6.1.2",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "rollup": "^2.76.0",
    "rollup-plugin-cleandir": "^2.0.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-node-externals": "^4.1.1",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-jest": "^28.0.6",
    "tslib": "^2.4.0",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4"
  }
}
